{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "removeComments": false,
    "noImplicitAny": false,
    "declaration": true,
    "typeRoots": [
      "node_modules/@types/"
    ]
  },
  "include": [
    "dist/*"
  ],
  "angularCompilerOptions": {
    "genDir": "aot-compiled"
  }
}
